<p id="notice"><%= notice %></p>

<% product_breadcrumb(@product).each_with_index do |link, i| %>
  <%= link %><%= ' ->' if i+1 < product_breadcrumb(@product).size %>
<% end %>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Des:</b>
  <%== @product.des %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<%= link_to 'Back', :back %>
